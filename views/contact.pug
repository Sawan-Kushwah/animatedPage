extends index.pug 

block content  
    <section class="contactform">
        <form action="/contact" method="post">
            <div class="contact" data-aos="fade-in">
                <h3>Get in touch with me!</h3>
                <div class="form-item" data-aos="fade-right" data-aos-offset ="180">
                    <label for="name" class="form-label">Name :- </label>
                    <input type="text" name="name" class="form-control" id="name" placeholder=" Enter name">
                </div>
                <div class="form-item" data-aos="fade-right" data-aos-delay="500" data-aos-offset ="180">
                    <label for="phone" class="form-label">Phone :- </label>
                    <input type="phone" name="phone" class="form-control" id="phone" placeholder=" Enter phone number">
                </div>
                <div class="form-item" data-aos="fade-right" data-aos-delay="1000" data-aos-offset ="180">
                    <label for="email" class="form-label">Email :- </label>
                    <input type="email" name="email" class="form-control" id="email" placeholder=" Enter E-mail">
                </div>
                <div class="form-item" data-aos="fade-right" data-aos-delay="1500" data-aos-offset ="180">
                    <label for="enquiry" class="form-label">Any Enquiry? :- </label>
                    <input type="text" name="enquiry" class="form-control" id="enquiry" placeholder="Type...">
                </div>
                <div>
                    <button class="btn csmb animate__animated animate__zoomIn animate__delay-2s"  >Submit</button>
                </div>
            </div>
        </form>
    </section>